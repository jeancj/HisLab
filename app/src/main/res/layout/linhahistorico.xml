<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLinhaExame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hemograma" />

            <TextView
                android:id="@+id/txtLinhaData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25/05/2019" />

            <TextView
                android:id="@+id/txtLinhaValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor: 15.0 ml/dl" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLinhaRefInf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ref. Inf: 95.0" />

            <TextView
                android:id="@+id/txtLinhaRefSup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ref. Sup: 181.0" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnExcluirHistorico"
            android:layout_width="40dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/ic_menu_delete" />

    </LinearLayout>
</LinearLayout>